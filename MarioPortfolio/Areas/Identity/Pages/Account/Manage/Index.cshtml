@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm(FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group text-center"  style="width:200px;height:200px;">
                <label class="button-cursor" role="button" style="width:100%;height:100%;">
                    <img class="img-thumbnail rounded-circle" style="width:100%;height:100%;" src="@Url.Action("GetMyProfilePic", "Picture")" />
                    <input id="fileInput" name="profilePicture" type="file" hidden onchange="var fileReader = new FileReader();fileReader.onload = function () {$('#upload-file-info').attr('src', fileReader.result);};fileReader.readAsDataURL($('#fileInput').prop('files')[0]);" />
                    <span class="center-image opacity-opaque-plus">
                        <span class="fas fa-camera text-white icon-resize"></span>
                    </span>
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}